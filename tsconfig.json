{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "webworker",
      "scripthost",
      "DOM"
    ]
  },
  "include": ["globals.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "dist/*.html|png"
  ],
}